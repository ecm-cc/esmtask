<div class="mdc-text-field-helper-line helper-div">
    <div class="mdc-text-field-helper-text mdc-text-field-helper-text--persistent">
        {{title}}
    </div>
</div>
<label class="mdc-text-field mdc-text-field--outlined property-field {{#if personType}}center-align{{/if}}">

    {{#if personType}}
        <!-- It's a supervisor, personell or accounting -->
        {{#if value}}
            <a class="mailto_input" href="mailto:{{lowercase secondValue}}">
        {{/if}}
            <input id="{{personType}}" type="text" class="mdc-text-field__input"
                aria-labelledby="{{id}}-label"
                value="{{#if value}}{{value}}{{else}}{{lowercase secondValue}}{{/if}}"
                {{#if secondValue}}data-id="{{lowercase secondValue}}" {{/if}}
                {{#if value}}data-name="{{value}}" {{/if}}
                readonly>
        {{#if value}}
            </a>
        {{/if}}
    {{else}}
        {{#if secondValue}}
            <!-- It's costcenter -->
            <input id="{{id}}" type="text" class="mdc-text-field__input" aria-labelledby="{{id}}-label"
                    {{#if secondValue}}data-id="{{secondValue}}" {{/if}}
                    {{#if value}}data-name="{{value}}" {{/if}}
                    value="{{#if value}}{{value}} &ndash; {{/if}}{{#if secondValue}}{{secondValue}}{{else}}{{/if}}"
                    readonly>
        {{else}}
            <!-- Default -->
            <input type="text" class="mdc-text-field__input" aria-labelledby="{{id}}-label" {{#if logo}}data-logo="{{logo}}" id="logo"{{else}}id="{{id}}"{{/if}} 
                value="{{#if value}}{{value}}{{/if}}" readonly>
        {{/if}}
    {{/if}}

    <div class="mdc-notched-outline">
        <div class="mdc-notched-outline__leading"></div>
        <div class="mdc-notched-outline__notch">
            <span class="mdc-floating-label" id="{{id}}-label">{{title}}</span>
        </div>
        <div class="mdc-notched-outline__trailing"></div>
    </div>
</label>